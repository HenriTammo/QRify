<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/scannerFragment">

    <fragment
        android:id="@+id/scannerFragment"
        android:name="eu.niggas_with_attitude.qrify.ScannerFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_scannerFragment_to_generatorFragment"
            app:destination="@id/generatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/generatorFragment"
        android:name="eu.niggas_with_attitude.qrify.GeneratorFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_generator" />

</navigation>